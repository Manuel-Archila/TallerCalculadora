<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculadora">
    
    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:text="123"
        android:textSize="28sp"
        android:layout_height="100dp"
        android:gravity="right|bottom"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn1"
            android:layout_margin="4dp"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_margin="4dp"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn3"
            android:layout_margin="4dp"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn4"
            android:layout_margin="4dp"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn5"
            android:layout_margin="4dp"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn6"
            android:layout_margin="4dp"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn7"
            android:layout_margin="4dp"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn8"
            android:layout_margin="4dp"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn9"
            android:layout_margin="4dp"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn10"
            android:layout_margin="4dp"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn11"
            android:layout_margin="4dp"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn12"
            android:layout_margin="4dp"
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn13"
            android:layout_margin="4dp"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn14"
            android:layout_margin="4dp"
            android:text="."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn15"
            android:layout_margin="4dp"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn16"
            android:layout_margin="4dp"
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"/>

    </LinearLayout>

</LinearLayout>